#include <iostream>
using namespace std;
void okok(int n, int x) {
    for(int i=n-1; i>=0;--i){
        for(int j=0; j<=i*4;++j) cout<<" ";
        if(i==x-1)cout<<"_P_";
        else cout<<"___";
        if(i==n-1)
            cout<<"\n";
        else
            cout<<"|\n";
    }
    cout<<"|\n";
}
int main(){//menu para elegir el tamaño de la escalera y ubicacion de la persona
    int n,p;
    cout<<"Tamaño de la escalera?: ";
    cin>>n;
    cout<<"¿Donde esta la persona?: ";
    cin>>p;
    okok(n,p);
}
